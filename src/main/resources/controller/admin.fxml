<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@../styles/application.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="navbar">
               <children>
                  <Label text="AgriFarm" styleClass="logo-text">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Label>
                  <HBox spacing="5.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="agricoleButton" mnemonicParsing="false" onAction="#handleAgricoleButtonAction" styleClass="nav-button" text="Agricole (CRUD)" />
                        <Button mnemonicParsing="false" styleClass="nav-button-active" text="Administration" />
                        <Button fx:id="marketplaceButton" mnemonicParsing="false" onAction="#handleMarketplaceButtonAction" styleClass="nav-button" text="Marketplace" />
                     </children>
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </HBox>
                  <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogoutButtonAction" styleClass="logout-button" text="Déconnexion" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Administration des Produits">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" />
               </VBox.margin>
            </Label>
            <Label style="-fx-font-style: italic;" text="Approuvez ou supprimez des produits. Seuls les produits approuvés seront disponibles pour les utilisateurs.">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Rechercher:" />
                  <TextField fx:id="searchField" prefHeight="26.0" prefWidth="200.0" promptText="Nom du produit" />
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchButtonAction" text="Rechercher" />
                  <Label text="Catégorie:" />
                  <ComboBox fx:id="filterCategoryCombo" prefWidth="150.0" promptText="Toutes" />
                  <Label text="Statut:" />
                  <ComboBox fx:id="filterStatusCombo" prefWidth="150.0" promptText="Tous" />
               </children>
               <VBox.margin>
                  <Insets left="20.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="560.0" prefWidth="570.0" styleClass="scroll-pane" BorderPane.alignment="CENTER">
         <content>
            <FlowPane fx:id="productCardsPane" hgap="15.0" prefHeight="550.0" prefWidth="550.0" styleClass="flow-pane" vgap="15.0" />
         </content>
         <BorderPane.margin>
            <Insets left="20.0" right="20.0" />
         </BorderPane.margin>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="admin-footer" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="statisticsLabel" text="Total: 0 produits | Approuvés: 0 | En attente: 0">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Label>
            <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefreshButtonAction" text="Rafraîchir" />
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane> 
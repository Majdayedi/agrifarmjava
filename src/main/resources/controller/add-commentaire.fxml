<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.AddCommentaireController"
      prefWidth="450.0"
      style="-fx-background-color: #f8f9fa;">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <!-- Header -->
    <HBox style="-fx-background-color: #2E7D32; -fx-background-radius: 10; -fx-padding: 15;">
        <Label text="🌱 Share Your Feedback"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    </HBox>

    <!-- Content Container -->
    <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;
                              -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <!-- Rating Section -->
        <VBox spacing="10" style="-fx-background-color: #E8F5E9; -fx-padding: 15; -fx-background-radius: 10;">
            <Label text="⭐ Your Rating"
                   style="-fx-font-weight: bold; -fx-text-fill: #2E7D32; -fx-font-size: 14px;"/>
            <Slider fx:id="ratingSlider" min="1" max="5" value="5"
                    majorTickUnit="1" minorTickCount="0"
                    snapToTicks="true" showTickLabels="true" showTickMarks="true"
                    style="-fx-control-inner-background: #C8E6C9;"/>
            <Label fx:id="ratingLabel"
                   style="-fx-text-fill: #F57C00; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Comment Section -->
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label text="🌿 Your Thoughts"
                   style="-fx-font-weight: bold; -fx-text-fill: #2E7D32; -fx-font-size: 14px;"/>
            <TextArea fx:id="commentArea" wrapText="true" prefRowCount="4"
                      style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #C8E6C9;
                             -fx-border-radius: 8; -fx-font-size: 14px;"/>
        </VBox>
    </VBox>

    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-padding: 12 25; -fx-background-radius: 20; -fx-cursor: hand;"/>
        <Button fx:id="submitButton" text="🌾 Submit Feedback" onAction="#handleSubmit"
                style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-padding: 12 25; -fx-background-radius: 20; -fx-cursor: hand;"/>
    </HBox>

</VBox>
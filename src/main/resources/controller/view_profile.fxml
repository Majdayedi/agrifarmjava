<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<VBox fx:id="root"
      spacing="15"
      alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ViewProfileController"
      stylesheets="@/css/StylesUser.css"
      styleClass="dashboard-vbox">

    <!-- User Profile Title -->
    <Label text="User Profile" styleClass="dashboard-label"/>

    <!-- Profile Image -->
    <ImageView fx:id="profileImageView"
               fitWidth="120"
               fitHeight="120"
               preserveRatio="true"/>

    <!-- User Info -->
    <Label fx:id="emailLabel" styleClass="label"/>
    <Label fx:id="rolesLabel" styleClass="label"/>
    <Label fx:id="firstNameLabel" styleClass="label"/>
    <Label fx:id="lastNameLabel" styleClass="label"/>

    <!-- Back Button -->
    <Button text="Back" onAction="#handleBack" styleClass="dashboard-button" prefWidth="150"/>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">
    <children>
        <Label text="Add New Task" />
        <TextField fx:id="taskNameField" promptText="Enter Task Name" />
        <TextField fx:id="taskDeadlineField" promptText="Enter Deadline (YYYY-MM-DD)" />
        <Button fx:id="saveTaskBtn" text="Save Task" />
    </children>
</VBox>